

@article{kosugi_hinode_2007,
  author =        {Kosugi, T. and Matsuzaki, K. and Sakao, T. and
                   Shimizu, T. and Sone, Y. and Tachikawa, S. and
                   Hashimoto, T. and Minesugi, K. and Ohnishi, A. and
                   Yamada, T. and Tsuneta, S. and Hara, H. and
